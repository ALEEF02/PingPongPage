<web-app
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>GetGames</servlet-name>
		<servlet-class>ppp.api.GetGames</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GetGames</servlet-name>
		<url-pattern>/api/games</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>GetUsers</servlet-name>
		<servlet-class>ppp.api.GetUsers</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GetUsers</servlet-name>
		<url-pattern>/api/users</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>AuthServlet</servlet-name>
		<servlet-class>ppp.auth.AuthServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AuthServlet</servlet-name>
		<url-pattern>/api/auth</url-pattern>
	</servlet-mapping>
	
	

	<servlet>
		<servlet-name>LoginServe</servlet-name>
		<servlet-class>ppp.staticServe.LoginServe</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServe</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>DashServe</servlet-name>
		<servlet-class>ppp.staticServe.DashServe</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DashServe</servlet-name>
		<url-pattern>/dash</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>GamesServe</servlet-name>
		<servlet-class>ppp.staticServe.GamesServe</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GamesServe</servlet-name>
		<url-pattern>/games</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>SocialServe</servlet-name>
		<servlet-class>ppp.staticServe.SocialServe</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SocialServe</servlet-name>
		<url-pattern>/socials</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>UserServe</servlet-name>
		<servlet-class>ppp.staticServe.UserServe</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserServe</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>ppp.auth.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

</web-app>